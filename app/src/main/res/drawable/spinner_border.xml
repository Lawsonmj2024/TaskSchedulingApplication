<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/spinner_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- Background color of the spinner -->
    <stroke
        android:width="1dp"
        android:color="#000000"/> <!-- Border color -->
    <corners android:radius="4dp"/> <!-- Rounded corners -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- Padding inside the spinner -->
</shape>
